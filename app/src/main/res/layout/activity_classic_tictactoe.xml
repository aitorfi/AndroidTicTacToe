<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="3"
    tools:context=".view.ClassicTicTacToeActivity">

    <ImageView
        android:id="@+id/imageViewBoard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tic_tac_toe_board"
        tools:srcCompat="@drawable/tic_tac_toe_board" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBoard"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBoard"
        app:layout_constraintStart_toStartOf="@+id/imageViewBoard"
        app:layout_constraintTop_toTopOf="@+id/imageViewBoard"
        app:orientation="horizontal"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/imageButton0_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/x_player"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/imageButton0_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/o_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imageButton0_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/x_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imageButton1_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/o_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imageButton1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/x_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imageButton1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/o_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imageButton2_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/x_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imageButton2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/o_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/imageButton2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/x_player"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/buttonRestartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="RESTART GAME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewScoreboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBoard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/tictactoe_scoreboard" />

    <TextView
        android:id="@+id/textViewScorePlayerX"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#f42f42"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewScoreboard"
        app:layout_constraintStart_toStartOf="@+id/imageViewScoreboard"
        app:layout_constraintTop_toTopOf="@+id/imageViewScoreboard" />

    <TextView
        android:id="@+id/textViewScorePlayerO"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="80dp"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#2fbbf4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewScoreboard"
        app:layout_constraintEnd_toEndOf="@+id/imageViewScoreboard"
        app:layout_constraintTop_toTopOf="@+id/imageViewScoreboard"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewScoreboardX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewScoreboard"
        app:layout_constraintStart_toStartOf="@+id/imageViewScoreboard"
        app:layout_constraintTop_toTopOf="@+id/imageViewScoreboard"
        app:srcCompat="@drawable/x_player64x64" />

    <ImageView
        android:id="@+id/imageViewScoreboardO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewScoreboard"
        app:layout_constraintEnd_toEndOf="@+id/imageViewScoreboard"
        app:layout_constraintTop_toTopOf="@+id/imageViewScoreboard"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/o_player64x64" />
</androidx.constraintlayout.widget.ConstraintLayout>